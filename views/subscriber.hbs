                        <table id="consentsTable">
                            <tr>
                                <th>Template ID</th>
                                <th></th>
                                <th></th>
                            </tr>
                            {{#each consent}}
                                <tr id="remove{{@index}}">
                                    <td>{{this}}</td>
                                    <td></td>
                                    <td>
                                        <span class="badge hoverable" onclick="removeConsent({{@index}})"><i
                                                class="tiny material-icons">clear</i></span>

                                    </td>
                                </tr>
                            {{/each}}

                        </table>

                    </div>

                </div>
                <div class="tab-pane fade" id="tabtwo" role="tabpanel">
                    <p class="">Please use this to view/modify your existing preferences</p>
