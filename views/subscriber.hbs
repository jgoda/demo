                                            <label>
                                                <input type="checkbox" id="t5">
                                                <span class="lever"></span>

                                            </label>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="optionContainer">
                                        <div class="switch">
                                            14:00 hrs to 16:00 hrs
                                            <label>
                                                <input type="checkbox" id="t6">
                                                <span class="lever"></span>

