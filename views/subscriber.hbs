<script>
    function removeConsent(id) {
        $('#remove' + id).addClass('hide');
    }
</script>
<div class="container">
    <header>
        <h1>Subscriber Account</h1>
        <p>Welcome. You can use this page to view/manage your consents and preferences and to file a complaint</p>
    </header>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs">
                <li class="nav-item"><a href="" class="active nav-link" data-toggle="tab"
                                        data-target="#tabone">Consents</a>
                </li>
                <li class="nav-item"><a class="nav-link" href="" data-toggle="tab" data-target="#tabtwo">Preferences</a>
                </li>
                <li class="nav-item"><a href="" class="nav-link" data-toggle="tab" data-target="#tabthree">Complaint</a>
                </li>
            </ul>
            <div class="tab-content mt-2">
                <div class="tab-pane fade show active" id="tabone" role="tabpanel">
