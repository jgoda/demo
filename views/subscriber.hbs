                                                <input type="checkbox" id="ent">
                                                <span class="lever"></span>

                                            </label>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="optionContainer">
                                        <div class="switch">
                                            Tourism and Leisure
                                            <label>
                                                <input type="checkbox" id="tourism">
                                                <span class="lever"></span>

                                            </label>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="optionContainer">
                                        <div class="switch">
                                            Food and Beverages
                                            <label>
                                                <input type="checkbox" id="food">
                                                <span class="lever"></span>

                                            </label>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <a class="waves-effect waves-light btn" onclick="updateTypeUcc()">update</a>

                                </div>

                            </div>

                            <div class="categoryContainer">
                                <button class="category" type="button" data-toggle="collapse"
                                        data-target="#uccModeOfCommunication"
                                        aria-expanded="false" aria-controls="uccModeOfCommunication">
                                    <span>UCC Mode of communication</span>
                                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                                </button>


                                <div class="collapse" id="uccModeOfCommunication">
                                    <div class="optionContainer">
                                        <div class="switch">
