                                            <label>
                                                <input type="checkbox" id="allModeCommunication">
                                                <span class="lever"></span>

                                            </label>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="optionContainer">
                                        <div class="switch ">
