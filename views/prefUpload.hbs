<div class="container">
    <div class="text-center heading-margin">
        <p>Upload File</p>
    </div>


    <form action="/api/prefUpdate" enctype="multipart/form-data" method="post">
        <div class="categoryContainer">
            <div class="row">
                <div class="input-field col s12">
                    <input id="loginPhone" type="file" name="prefFile" class="validate">
                </div>
            </div>
            <button class="waves-effect waves-light btn" type="submit">Upload</button>
        </div>
    </form>
    {{#if success}}
        <div class="categoryContainer">
            <div class="row">
                <div class="col s12 m6" style="padding: 0">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">UPLOADED</span>
                            <p>Preferences saved successfully.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}

</div>

